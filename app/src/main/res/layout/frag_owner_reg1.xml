<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/frag_owner_reg1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:id="@+id/Address_new">

                <EditText
                    android:id="@+id/addresstext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Address (Flat No, Building No, Street Name)"
                    android:inputType="text" />


            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:id="@+id/Locality_Text2">

                <EditText
                    android:id="@+id/localitytext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Area,City (eg,Shivaji Nagar,Pune)"
                    android:inputType="text" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:id="@+id/District_Text">

                <EditText
                    android:id="@+id/districttext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="District, State, Country"
                    android:inputType="text" />


            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:id="@+id/Pincode_Text">
                <EditText
                    android:id="@+id/pincodetext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Pincode"
                    android:inputType="number" />


            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:id="@+id/Rent_Text">
                <EditText
                    android:id="@+id/renttext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Rent"
                    android:inputType="number" />


            </android.support.design.widget.TextInputLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Facilities :-"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="20dp"
                />
            <CheckBox
                android:id="@+id/furniture_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Rent_text3"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="22dp"
                android:text="Furniture"
                android:textColor="@color/Brown"
                android:textStyle="bold" />
            <CheckBox
                android:id="@+id/geyser_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/furniture_checkbox"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="3dp"
                android:text="Geyser"
                android:textColor="@color/Brown"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/lift_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lift_checkbox"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="3dp"
                android:text="Lift"
                android:textColor="@color/Brown"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/wifi_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wifi_checkbox"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="3dp"
                android:text="Wifi"
                android:textColor="@color/Brown"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/bed_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bed_checkbox"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="3dp"
                android:text="Bed"
                android:textColor="@color/Brown"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:id="@+id/Facilities_Text">

                <EditText
                    android:id="@+id/facilitiestext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Facilities( eg,Parking,24*7 Water,etc)"
                    android:inputType="text" />


            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="200dp"
                android:background="@android:color/holo_orange_light"
                android:text="STEP 1 OF 2"
                android:textSize="20sp"
                android:id="@+id/step1of2button"
                android:layout_marginBottom="45dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
