<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/registerImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/edit2"
                        android:layout_marginLeft="73dp"/>
                    <TextView
                        android:id="@+id/dialog_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Registration"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/dialog_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp"
                        android:layout_alignTop="@+id/status_spinner"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="I am/We are"
                        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                        android:textColor="@android:color/holo_red_dark" />


                    <Spinner
                        android:id="@+id/status_spinner"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="0dp"
                        android:layout_width="250dp"
                        android:layout_height="25dp"
                        android:entries="@array/status"
                        android:gravity="bottom|left|center_vertical"
                        android:prompt="@string/default_prompt" />
                </LinearLayout>

                <TextView
                    android:id="@+id/dialog_text2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="*NOTE:If You aree in group please keep group photo"
                    android:textColor="@android:color/holo_blue_dark" />

                <ImageView
                    android:id="@+id/YourPhotoImage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/preview1" />
                <Button
                    android:id="@+id/dialog_upload1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="ADD YOURS PHOTO"
                    android:background="@android:color/holo_orange_light"/>

                <TextView
                    android:id="@+id/dialog_text3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="100dp"
                    android:text="(OPTIONAL)"
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_purple"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dialog_text4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="IF You are having Room then Upload photo"
                    android:textColor="@android:color/holo_blue_dark" />

                <ImageView
                    android:id="@+id/RoomsPhotoImage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/preview1" />
                <Button
                    android:id="@+id/dialog_upload2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="ADD ROOMS PHOTO"
                    android:background="@android:color/holo_orange_light"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/AcceptRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/dialog_text5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="I hereby Accept all terms and conditions given by ROOMIC INC and hereby make myself visible in this community"
                        android:textColor="@android:color/holo_red_light" />

                </LinearLayout>
                <Button
                    android:id="@+id/dialog_Register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Register"
                    android:background="@android:color/holo_orange_light"/>




            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>