<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details_Roommate"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:paddingLeft="60dp"
            android:src="@mipmap/logo_round" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="Roomic "
            android:textColor="@color/White"
            android:textSize="35sp"
            android:textStyle="bold" />

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_roommate_details1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/floating_button" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_roomate_details_nouse"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="Name : "
                    android:textColor="@color/Brown"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/name_roomate_details1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/LightGrey"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/status_roomate_details_nouse"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="Status : "
                    android:textColor="@color/Brown"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/status_roomate_details1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/LightGrey"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/address_roomate_details_nouse"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="Address : "
                    android:textColor="@color/Brown"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/address_roomate_details1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:textSize="18sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/LightGrey"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contact_roomate_details_nouse"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="Contact : "
                    android:textColor="@color/Brown"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/contact_roomate_details1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:textSize="19sp" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/LightGrey"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/emailid_roomate_details_nouse"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="Email Id : "
                    android:textColor="@color/Brown"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/emailid_roomate_details1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:textSize="19sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/LightGrey"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/age_roomate_details_nouse"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="Age : "
                    android:textColor="@color/Brown"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/age_roomate_details1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:textSize="20sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/LightGrey"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gender_roomate_details_nouse"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="Gender : "
                    android:textColor="@color/Brown"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/gender_roomate_details1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:textSize="19sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/LightGrey"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qualification_roomate_details_nouse"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="Qualification/studying: "
                    android:textColor="@color/Brown"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/qualification_roomate_details1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/LightGrey"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/addiction_roomate_details_nouse"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="Addiction : "
                    android:textColor="@color/Brown"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/addiction_roomate_details1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:textSize="18sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/LightGrey"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/constraints_roomate_details_nouse"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="Constriants : "
                    android:textColor="@color/Brown"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/constriants_roomate_details1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:textSize="18sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/LightGrey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/details_roomate_call2"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:src="@drawable/icon_phonecall" />

                <ImageButton
                    android:id="@+id/details_roomate_email"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:src="@drawable/gmail_icon" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
