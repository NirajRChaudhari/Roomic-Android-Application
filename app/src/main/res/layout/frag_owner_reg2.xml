<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frag_Reg_Owner_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:paddingLeft="60dp"
                android:src="@mipmap/logo_round" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="Roomic "
                android:textColor="@color/White"
                android:textSize="35sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/set_map_textview"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="35dp"
                android:text="Click Below to set MAP :- "
                android:textSize="20sp"
                android:focusedByDefault="true"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/mapButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:src="@drawable/map" />
            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="15dp"
                android:text="Terms and Conditions :-"

                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/termsandconditions1"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:ems="10"
                android:hint="1. eg, Date for submiiting rent"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/termsandconditions2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="2."
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/termsandconditions3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="3."
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/termsandconditions4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="4."
                android:inputType="textPersonName" />

        </LinearLayout>



        <Spinner
            android:id="@+id/spinner"
            android:layout_width="235dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/LightGrey"
            android:entries="@array/size"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="108dp"
                android:layout_marginTop="17dp"
                android:text="ADD  ROOM  PHOTOS :-"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/Brown"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/imgView1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:contentDescription="Your selected image"
                android:src="@drawable/preview1"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/select_photo1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/holo_orange_light"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="SELECT IMAGE 1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/upload_photo1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/holo_orange_light"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="UPLOAD IMAGE "
                    android:textSize="20dp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/imgView2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:contentDescription="Your selected image"
                android:src="@drawable/preview1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/select_photo2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/holo_orange_light"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="SELECT IMAGE 2"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/upload_photo2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/holo_orange_light"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="UPLOAD IMAGE "
                    android:textSize="20dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgView3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:contentDescription="Your selected image"
                android:src="@drawable/preview1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/select_photo3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/holo_orange_light"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="SELECT IMAGE 3"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/upload_photo3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/holo_orange_light"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="UPLOAD IMAGE "
                    android:textSize="20dp" />
            </LinearLayout>


            <Button
                android:id="@+id/addroombutton"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="35dp"
                android:background="@android:color/holo_orange_light"
                android:text="ADD ROOM"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
